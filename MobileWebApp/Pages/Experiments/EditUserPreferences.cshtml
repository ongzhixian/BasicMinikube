@page "/experiments/edit-user-preferences"
@model MobileWebApp.Pages.Experiments.EditUserPreferencesModel
@{
    ViewData["Title"] = "Edit User Preferences";
}

<partial name="_HeaderPartial" />

<main>

    <header>
        <a asp-page="/experiments/index">Back to Experiments</a>
    </header>

    <div class="main-content">
        
        <h2>User Preference</h2>

        <form method="post">

            <div class="layout">

                <div></div>
                <header>
                    <h1>@ViewData["Title"]</h1>
                </header>
                <div></div>

                <label asp-for="PreferredPageSize"></label>
                <input asp-for="PreferredPageSize" autocomplete="off" />
                <div></div>
                

                <div></div>
                <button type="submit">Save Preferences</button>
                <div></div>

                @if (ViewData["message"] != null)
                {
                    <div></div>
                    <p>@ViewData["message"]</p>
                    <div></div>
                }

            </div>

        </form>
    </div>



</main>

@* <input type="hidden" id="pageSize" value="@Model.PageSize" /> *@

<partial name="_FooterPartial" />