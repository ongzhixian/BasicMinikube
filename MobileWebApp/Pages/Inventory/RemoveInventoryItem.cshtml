@page "/inventory/remove-item/{id?}"
@model RemoveInventoryItemPageModel
@{
    ViewData["Title"] = "Remove Inventory Item";
}

<partial name="_HeaderPartial" />

<main>

    <header>
        <a asp-page="/Inventory/InventorySku" asp-route-id="@Model.ItemName">Back to SKU List</a>
    </header>

    <form method="post" class="send-test-email">
        <input type="hidden" asp-for="ItemName" />
        <div class="layout">

            <div></div>
            <header>
                <h1>@ViewData["Title"]</h1>
            </header>
            <div></div>

            @if (string.IsNullOrEmpty(Model.ItemName))
            {

                <div></div>
                <div>
                    <p>The item that you are trying to remove cannot be found.</p>
                </div>
                <div></div>

            }
            else
            {
                <label asp-for="ItemName"></label>
                <span>@Model.ItemName</span>
                <div></div>

                <label asp-for="QuantityUnit"></label>
                <span>@Model.QuantityUnit</span>
                <div></div>

                <div></div>
                <button type="submit" disabled>Remove Item</button>
                <div></div>

                @if (ViewData["message"] != null)
                {
                    <div></div>
                    <p>@ViewData["message"]</p>
                    <div></div>
                }
            }


        </div>

    </form>

